*/

		spi_1: spi@0x3102F000 {
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "adi,spi3";
			reg = <0x3102F000 0xFF>;
			interrupts = <0 105 0>;
			num-cs = <128>;
			dma-channel = <24>, <25>;
			pinctrl-names = "default";
			pinctrl-0 = <&spi1_default>;

			spidev {
				#address-cells = <1>;
				size-cells = <1>;
				compatible = "rohm,dh2228fv";
				spi-max-frequency = <1000000>;
				reg = <42>;
			};
		};

		spi_2: spi@0x31044000 {
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "adi,spi3";
			reg = <0x31044000 0xFF>;
			interrupts = <0 71 0>;
			num-cs = <128>;
			dma-channel = <26>, <27>;
			pinctrl-names = "default";
			pinctrl-0 = <&spi2_quad>;

			flash: is25lp256d@0 {
				#address-cells = <1>;
				#size-cells = <1>;
				compatible = "issi,is25lp256d", "jedec,spi-nor";
				spi-max-frequency = <50000000>;
				reg = <31>;
				spi-cpol;
				spi-cpha;
				spi-tx-bus-width = <4>;
				spi-rx-bus-width = <4>;
				dma-mode;

				/* Second Stage Bootloader  */
				/* <0x00000 0x80000>; */                  	/* 0.5MB */

				partition@0 {
					label = "uboot fallback (spi)";
					reg = <0x80000 0xC0000>;                /* 0.75MB */
				};
				partition@1 {
					label = "uboot modern (spi)";
					reg = <0x140000 0xC0000>;                /* 0.75MB */
				};
				partition@2 {
					label = "kernel 1. (spi)";
					reg = <0x200000 0x500000>;              /* 5MB */
				};
				partition@3 {
					label = "root file system 1. (spi)";
					reg = <0x700000 0xA00000>;              /* 10MB */
				};
				partition@4 {
					label = "kernel 2. (spi)";
					reg = <0x1100000 0x500000>;              /* 5MB */
				};
				partition@5 {
					label = "root file system 2. (spi)";
					reg = <0x1600000 0xA00000>;              /* 10MB */
				};
			};
		};

		mmc0: mmc@0x31010000 {
			compatible = "adi,mmc";
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x31010000 0xFF>;
			interrupts = <0 123 0>;
			spu_securep_id = <41>;
			pinctrl-names = "default";
			pinctrl-0 = <&mmc0_default>;
			fifo-depth = <1024>;
			bus-width = <4>;
			non-removable;
			no-1-8-v;
		};

		pinctrl@0 {
			uart {
				uart1_default: uart1@0 {
					adi,group = "uart1grp";
					adi,function = "uart1";
				};
				uart1_hwflow: uart1@1 {
					adi,group = "uart1_hwflowgrp";
					adi,function = "uart1";
				};
				/*uart2_default: uart2@0 {
					adi,group = "uart2grp";
					adi,function = "uart2";
				};
				uart2_hwflow: uart2@1 {
					adi,group = "uart2_hwflowgrp";
					adi,function = "uart2";
				};*/
			};
			mmc {
			    mmc0_default: mmc0@0 {
			        adi,group = "mmc0f4bgrp";
			        adi,function = "mmc0";
			    };
			};
		};

		icc@0 {
			compatible = "adi,icc";
			reg = <0x20000000 0x1000>;
			interrupt-parent = <&gic>;
			interrupts = <0 206 1>;
			peerinfo = <1 71>, <2 72>;
		};
		
		video_decoder_aptina: cap_aptina {
			compatible = "iris,gen6-aptina_mt9v022";
			card-name = "mt9v022";
			type = <2>;
			dma-channel = <28>;
			interrupts = <0 83 0>;
			reg = <0x3102D000 0xfff>;
			spu_securep_id = <95>;
			i2c_bus_id = <0>;
			pinctrl-names = "8bit", "10bit", "12bit";
			pinctrl-0 = <&ppi0_8b>;
			pinctrl-1 = <&ppi0_10b>;
			pinctrl-2 = <&ppi0_12b>;
		};

		video_decoder_epc660: cap_epc660 {
			compatible = "iris,gen6-epc660";
			card-name = "epc660";
			type = <2>;
			dma-channel = <28>;
			interrupts = <0 83 0>;
			reg = <0x3102D000 0xfff>;
			spu_securep_id = <95>;
			i2c_bus_id = <0>;
			pinctrl-names = "8bit", "10bit", "12bit";
			pinctrl-0 = <&ppi0_8b>;
			pinctrl-1 = <&ppi0_10b>;
			pinctrl-2 = <&ppi0_12b>;
		};
	};
};
