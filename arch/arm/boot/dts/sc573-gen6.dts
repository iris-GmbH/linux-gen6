/dts-v1/;

/include/ "sc57x.dtsi"

/ {
	model = "ADI sc57x-gen6";
	compatible = "adi,sc57x-gen6", "adi,sc57x";

	aliases {
		/*serial2 = &uart2;*/
	};

	memory@80000000 {
		device_type = "memory";
		reg = <0x80000000 0xF000000>;
	};
	
	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		cont_memory: dsp_res@0x80000000 {
			compatible = "iris,gen6-cont-memory";
			reg = <0x80000000 0x1000000>;
			reg-names = "cont_memory";
		};
		
		sram_mem_dma: sram_res_dma@0x20001000 {
			compatible = "iris,gen6-cont-dma-memory";
			reg = <0x20001000 0x000a0000>;
			reg-names = "sram_mem_dma";
		};
		sram_mem: sram_res@0x200A1000 {
			compatible = "iris,gen6-cont-memory";
			reg = <0x200a1000 0x0005F000>;
			reg-names = "sram_mem";
		};
	};

	scb {
		cont_memory_dma {
			compatible = "iris,gen6-cont-dma-memory";
			memory-region = <&sram_mem_dma>;
		};

		cont_memory {
			compatible = "iris,gen6-cont-memory";
			memory-region = <&cont_memory &sram_mem>;
		};

